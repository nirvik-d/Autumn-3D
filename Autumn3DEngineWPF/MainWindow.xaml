<Window x:Class="Autumn3DEngineWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Autumn3D Engine" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Load Model" Width="150" Height="40" Click="OnLoadModelClick" Margin="0,0,0,10" />
            <Button Content="Render Model" Width="150" Height="40" Click="OnRenderClick" />
        </StackPanel>
    </Grid>
</Window>
